<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="hostFactory" class="com.youzan.trade.util.httpclient.HostFactory" init-method="initParams">
        <property name="javaHostPropertyFile" value="conf/javaservicehost.properties"/>
        <property name="openHost" value="${open.host}"/>
        <property name="apiHost" value="${api.host}"/>
    </bean>

    <bean name="client" class="com.youzan.trade.util.httpclient.Client" >
        <property name="hostFactory" ref="hostFactory"/>
    </bean>

    <bean name="httpClientUtil" class="com.youzan.trade.util.httpclient.HttpClientUtil" init-method="init">
        <property name="connectionTimeoutMs" value="${conn.to}"/>
        <property name="soTimeoutMs" value="${so.to}"/>
    </bean>

</beans>


