<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.youzan.trade.timeout.dal.dao.DelayTaskDAO">

  <resultMap id="BaseResultMap" type="com.youzan.trade.timeout.dal.dataobject.DelayTaskDO" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="biz_type" property="bizType" jdbcType="INTEGER" />
    <result column="biz_id" property="bizId" jdbcType="VARCHAR" />
    <result column="biz_state" property="bizState" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="TINYINT" />
    <result column="close_reason" property="closeReason" jdbcType="TINYINT" />
    <result column="delay_start_time" property="delayStartTime" jdbcType="INTEGER" />
    <result column="delay_end_time" property="delayEndTime" jdbcType="INTEGER" />
    <result column="delay_times" property="delayTimes" jdbcType="INTEGER" />
    <result column="msg_status" property="msgStatus" jdbcType="TINYINT" />
    <result column="msg_end_time" property="msgEndTime" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="INTEGER" />
    <result column="update_time" property="updateTime" jdbcType="INTEGER" />
  </resultMap>

  <sql id="tableName">
    delay_task
  </sql>

  <sql id="Base_Column_List">
    id, biz_type, biz_id, biz_state, status, close_reason,
    delay_start_time, delay_end_time, delay_times,msg_status,msg_end_time,
    create_time, update_time
  </sql>

  <sql id="All_Column_List">
    biz_type, biz_id, biz_state, status, close_reason,
    delay_start_time, delay_end_time, delay_times,msg_status,msg_end_time,
    create_time, update_time
  </sql>

  <insert id="insert">
    INSERT INTO <include refid="tableName"/>
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <include refid="All_Column_List"/>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      #{bizType},#{bizId},#{bizState},#{status},#{closeReason},
      #{delayStartTime},#{delayEndTime},#{delayTimes},#{msgStatus},#{msgEndTime},
      #{createTime},#{updateTime}
    </trim>

  </insert>

  <select id="selectListWithTimeout" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/>
    FROM <include refid="tableName" />
    WHERE status = 10 AND delay_end_time &lt; #{timePoint}
    LIMIT 100
  </select>

  <select id="selectListWithMsgTimeout" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/>
    FROM <include refid="tableName" />
    WHERE status = 10 AND msg_status = 10 AND msg_end_time &lt; #{timePoint}
    LIMIT 1000
  </select>

  <select id="selectDelayTimesById" resultType="java.lang.Integer">
    SELECT delay_times
    FROM <include refid="tableName" />
    WHERE id = #{taskId}
  </select>


  <update id="close">
    UPDATE <include refid="tableName" />
    <set>
      <if test="status != null">status = #{status},</if>
      <if test="closeReason != null">close_reason = #{closeReason},</if>
      delay_times = delay_times + 1,
      <if test="updateTime != null">update_time = #{updateTime},</if>
    </set>
    WHERE id = #{id} AND status = 10
  </update>

  <update id="updateOnRetry">
    UPDATE <include refid="tableName" />
    <set>
      delay_end_time =  delay_end_time + #{delayTimeIncrement},
      delay_times = delay_times + 1,
      update_time = #{updateTime}
    </set>
    WHERE id = #{taskId} AND status = 10
  </update>

  <update id="closeMsg">
    UPDATE <include refid="tableName" />
    <set>
      msg_status = #{msgStatus},
      update_time = #{updateTime}
    </set>
    WHERE id = #{taskId} AND status = 10 AND msg_status = 10
  </update>

  <update id="updateMsgOnRetry">
    UPDATE <include refid="tableName" />
    <set>
      msg_end_time =  msg_end_time + #{delayTimeIncrement},
      update_time = #{updateTime}
    </set>
    WHERE id = #{taskId} AND status = 10 AND msg_status = 10
  </update>

  <update id="closeTaskAhead">
    UPDATE <include refid="tableName" />
    <set>
      status = #{status},
      close_reason = #{closeReason},
      update_time = #{updateTime}
    </set>
    WHERE biz_type = #{bizType} AND biz_id = #{bizId} AND status = 10
  </update>

</mapper>