    <bean id="clusterTx" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="clusterDataSource"/>
    </bean>

    <tx:annotation-driven transaction-manager="clusterTx"/>
    -->
</beans>
